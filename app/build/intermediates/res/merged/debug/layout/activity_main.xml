<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jawadh.helloworld.MainActivity">
    <!--android:paddingBottom="@dimen/activity_vertical_margin"-->
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
    <!--android:paddingTop="@dimen/activity_vertical_margin"-->
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar">

    </include>

    <CheckedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="Welcome to User Management!"
        android:textSize="30dp" />

    <Button
        android:id="@+id/Add_User"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New User" />

    <Button
        android:id="@+id/GetUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get All Users" />

    <Button
        android:id="@+id/GetTop10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Top 10 Users" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#602"
        android:divider="#206">

    </ListView>

</LinearLayout>
